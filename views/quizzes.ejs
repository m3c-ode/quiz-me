<main id="main-content">
</main>

<script>
  let clipboard = new ClipboardJS('.shareQuiz');

  clipboard.on('success', function(e) {
    let originalText = e.trigger.innerText;

    e.trigger.innerText = 'Copied! Now you can Share!';
    e.trigger.disabled = true;

    setTimeout(() => {
      e.trigger.innerText = originalText;
      e.trigger.disabled = false;
    }, 3000);
  });

</script>

