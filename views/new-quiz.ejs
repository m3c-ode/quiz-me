<%- include('partials/_header') %>
<script type="text/javascript" src="/scripts/new-quiz.js"></script>

<h1>Let's Create A New Quizz!</h1>
<main id="main-content">
  <form autocomplete="off" id="new-quizz" action="/quizzes" method="post">
    <section class="title">
      <label for="title">
        Pick a Title or Theme
      </label>
      <input type="text" name="title" required>
    </section>
    <section class="privacy">
      <label for="is_public">
        Make it Public?
      </label>
      <input type="checkbox" name="is_public" value="true">
    </section>
    <section class="new-question">
      <label for="question1">
        Choose A Question
      </label>
      <input type="text" name="question1" required>
      <section class="new-answers">
        <div>
          <label for="answer1">
            Answer 1
          </label>
          <input type="radio" name="question1" value="answer1" required>
          <!-- <div> -->
          <input type="text" name="answer1" required>
          <!-- </div> -->
        </div>
        <label for="answer2">
          Answer 2
        </label>
        <input type="radio" name="question1" value="answer2">
        <input type="text" name="answer2" required>
        <label for="answer3">
          Answer 3
        </label>
        <input type="radio" name="question1" value="answer3">
        <input type="text" name="answer3" required>
        <label for="answer4">
          Answer 4
        </label>
        <input type="radio" name="question1" value="answer4">
        <input type="text" name="answer4" required>
      </section>
    </section>
    <button class="add-question">Add Another Question</button>
    <button id="submit-quizz" type="submit">Let's Go!</button>
  </form>
</main>

<%- include('partials/_footer') %>