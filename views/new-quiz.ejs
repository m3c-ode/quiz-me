<%- include('partials/_header') %>
<script type="text/javascript" src="/scripts/new-quiz.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"
  integrity="sha512-rstIgDs0xPgmG6RX1Aba4KV5cWJbAMcvRCVmglpam9SoHZiUCyQVDdH2LPlxoHtrv17XWblE/V/PP+Tr04hbtA=="
  crossorigin="anonymous" referrerpolicy="no-referrer"></script>

<h1>Let's Create A New Quiz!</h1>
<main id="main-content">
  <form autocomplete="off" id="new-quizz" action="/quizzes" method="post">
    <section class="title">
      <label for="title">
        Pick a Title or Theme
      </label>
      <input type="text" name="title" required>
    </section>
    <section class="privacy">
      <label for="is_public">
        Make it Public?
      </label>
      <input type="checkbox" name="is_public" value="true">
    </section>
    <section class="new-question">
      <label for="question1">
        Choose A Question
      </label>
      <input type="text" name="question1" required>
      <section class="new-answers">
        <label for="answer1">
          Answer 1
        </label>
        <div class="choose-answer">
          <span class="radio-label">Is Answer?</span>
          <input type="radio" class="radio-button" name="question1" value="answer1" required>
        </div>
        <input type="text" name="answer1" required>
        <label for="answer2">
          Answer 2
        </label>
        <div class="choose-answer">
          <span class="radio-label">Is Answer?</span>
          <input type="radio" class="radio-button" name="question1" value="answer2">
        </div>
        <input type="text" name="answer2" required>
        <label for="answer3">
          Answer 3
        </label>
        <div class="choose-answer">
          <span class="radio-label">Is Answer?</span>
          <input type="radio" class="radio-button" name="question1" value="answer3">
        </div>
        <input type="text" name="answer3" required>
        <label for="answer4">
          Answer 4
        </label>
        <div class="choose-answer">
          <span class="radio-label">Is Answer?</span>
          <input type="radio" class="radio-button" name="question1" value="answer4">
        </div>
        <input type="text" name="answer4" required>
      </section>
    </section>
    <button class="add-question">Add Another Question</button>
    <button id="submit-quizz" type="submit">Let's Go!</button>
  </form>
</main>

<%- include('partials/_footer') %>